<h1 class="text-center">New games</h1>
<p class="text-center">Please find your letters below:</p>
<div class="container text-center">
 <% @letters.each do |letter| %>
    <div class="letters text-center">
      <p class="letter"><%=letter%></p>
    </div>
  <% end %>
</div>

<div id="answer">
  <form class="form text-center" action="score" data-turbo="false">
  <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word">
    <input type="submit" value="submit!">
  </form>
</div>
